<div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
  <%= render "devise/shared/error_messages", resource: @project %>
  <%= form_for @project do |f| %>
    <div>
      <div>
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Create new volunteer position
          </h3>
          <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
            This information will be displayed publicly. If you have any questions about creating a position on this platform, please contact newhavenpandemic@gmail.com.
          </p>
        </div>

        <%= render partial: 'project_form', locals: { f: f } %>
      </div>
    </div>
    <div class="mt-8 border-t border-gray-200 pt-5">
      <div class="flex justify-end">
        <p class="mt-1 max-w-2xl text-sm leading-5 text-gray-500">
          Please remember to take down this position posting when you have found the volunteers you need.
        </p>
        <span class="ml-3 inline-flex rounded-md shadow-sm">
          <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-<%=PRIMARY_COLOR %>-600 hover:bg-<%=PRIMARY_COLOR %>-500 focus:outline-none focus:border-<%=PRIMARY_COLOR %>-700 focus:shadow-outline-<%=PRIMARY_COLOR %> active:bg-<%=PRIMARY_COLOR %>-700 transition duration-150 ease-in-out">
            Create volunteer position
          </button>
        </span>
      </div>
    </div>
  <% end %>
</div>
